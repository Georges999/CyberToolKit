<Window x:Class="CyberToolKit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberToolKit"
        mc:Ignorable="d"
        Title="CyberToolKit" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#252526">
    <DockPanel>
        <!-- Status Bar at the bottom -->
        <StatusBar DockPanel.Dock="Bottom" Background="#007ACC">
            <StatusBarItem>
                <TextBlock x:Name="CurrentDirectoryText" Text="Current Directory: C:\" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Border Grid.Column="0" Background="#2D2D30" CornerRadius="5,0,0,0">
                <StackPanel Margin="10">
                    <TextBlock Text="CyberToolKit" FontSize="22" FontWeight="Bold" Foreground="White" Margin="10,10,0,20"/>
                    <ListBox x:Name="MenuList" Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" FontSize="14" SelectionChanged="MenuList_SelectionChanged">
                        <ListBoxItem Content="Dashboard" Padding="10,5"/>
                        <Separator Margin="10"/>
                        <ListBoxItem Content="Packet Sniffer" Padding="10,5"/>
                        <ListBoxItem Content="Nmap Scanner" Padding="10,5"/>
                        <ListBoxItem Content="Honeypot" Padding="10,5"/>
                        <Separator Margin="10"/>
                        <ListBoxItem Content="Encrypt File" Padding="10,5"/>
                        <ListBoxItem Content="Decrypt File" Padding="10,5"/>
                        <ListBoxItem Content="Integrity Checker" Padding="10,5"/>
                        <ListBoxItem Content="Change Directory" Padding="10,5"/>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="0,5,5,0">
                <ContentControl x:Name="MainContent" Margin="20">
                    <TextBlock Text="Welcome to CyberToolKit" FontSize="32" FontWeight="Light" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ContentControl>
            </Border>
        </Grid>
    </DockPanel>
</Window>
